#!/usr/bin/make -f

build:

binary: binary-indep install

clean:
	dh_testdir
	dh_testroot
	dh_clean

GITREPO = http://alcopop.org/code/debian/debgtd/git
dest=$(CURDIR)/debian/debgtd

get-orig-source:
	git-archive --remote=$(GITREPO) | gzip > 

install:
	dh_testdir
	dh_testroot
	dh_clean -k
	dh_installdirs
	make install \
		PREFIX=/usr DESTDIR=$(dest) \
		LIBDIR=/usr/share/python-support/debgtd

binary-arch:

binary-indep: install
	dh_testdir
	dh_testroot
	dh_pysupport
	dh_fixperms
	dh_installdeb
	dh_gencontrol
	dh_md5sums
	dh_builddeb
